<h1>Shelters</h1>

<ul>
<% @shelters.each do |shelter| %>
  <li>
    <span><%= shelter.name %></span>
    <span><%= shelter.address %></span>
    <% if shelter.checkin_time %>
      <strong>daily checkin time: </strong><span><%= shelter.checkin_time.strftime("%I:%M %p") %></span>
    <% end %>
    <span><%= link_to "delete", admin_shelter_path(shelter), :method => "delete" %></span>
    <span><%= link_to "edit", edit_admin_shelter_path(shelter) %></span>
    <span><%= link_to "update bed availability", new_admin_shelter_availability_report_path(shelter) %></span>
  </li>
<% end %>
</ul>

<%= link_to "Add a Shelter", new_admin_shelter_path %>
