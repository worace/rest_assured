<div class="col-md-8 col-md-offset-2">
  <h1 class="text-center">All Shelters</h1>
  <table class="table table-striped text-center">

  <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Beds available</th>
      <th class="text-center">Daily checkin time:</th>
      <th class="text-center">Last updated:</th>
    </tr>

    <tbody>
      <% @shelters.each do |shelter| %>
        <tr>
          <td><%= shelter.name %></td>
          <% if shelter.beds_available.present? %>
            <td><%= shelter.beds_available %></td>
          <% end %>
          <td><%= shelter.checkin_time.strftime("%I:%M %p") %></td>
          <% if shelter.availability_reports.any? %>
            <td><%= shelter.availability_reports.last.created_at.strftime("%A, %b %e, %l:%M %p") %></td>
          <% else %>
            <td>No availability Reports on File</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>

  </thead>
</table>
